@*
    For Departments > Index Page
*@

@using LibrarySystemAdrienne.Web.Models.Departments
@using LibrarySystemAdrienne.Web.Controllers
@using LibrarySystemAdrienne.Web.Startup

@model DepartmentListViewModel

@{
    ViewBag.Title = L("Departments");
    ViewBag.CurrentPageName = PageNames.Departments;
}


@section scripts
{
    <environment names="Development">
            
        <script src="~/view-resources/Views/Departments/Index.js" asp-append-version="true"></script>

     </environment>
}



<section class="content-header">

    <div class="container-fluid">

        <div class="row">

            <div class="col-sm-6">
                <h1>@L("Departments")</h1>
            </div>

            <div class="col-sm-6">

            </div>

        </div>

    </div>

</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                   
                    <div class="card-header">

                        <a class="btn bg-blue float-sm-right" asp-controller="Departments" asp-action="CreateOrEditDepartment">
                            <i class="fa fa-plus-square"></i>
                            @L("AddDepartment")
                        </a>

                        <div class="col-sm-6">
                           
                        </div>

                        <div class="row">
                          
                            <div class="col-md-6">

                                <form asp-controller="Departments" asp-action="Index" method="get">

                                    <div class="input-group">
                                   
                                        <input type="text" name="searchDepartment" class="form-control txt-search" />
                                            
                                        <div class="input-group-prepend">
                                            <button type="submit" name="searchDepartment" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span> @L("Search")
                                            </button>
                                        </div>

                                    </div>

                                </form>

                            </div>

                        </div>

                    </div>

                    <div class="card-body">

                        <div class="table-responsive">
                            <table id="DepartmentsTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>@L("DepartmentId")</th>
                                        <th>@L("DepartmentName")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var department in Model.Departments)
                                    {
                                        <tr>
                                            <td>@department.Id</td>
                                            <td>@department.DepartmentName</td>
                                            <td>

                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-secondary edit-department" data-department-id="@department.Id">
                                                    <i class="fas fa-pencil-alt"></i> @L("EditDepartment")
                                                </button>

                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-danger delete-department" data-department-id="@department.Id" data-department-name="@department.DepartmentName">
                                                    <i class="fas fa-trash"></i> 
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    </section>