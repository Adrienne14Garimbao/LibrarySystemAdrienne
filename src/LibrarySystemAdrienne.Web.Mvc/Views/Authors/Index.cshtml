@*
    For Authors > Index
*@

@using LibrarySystemAdrienne.Web.Models.Authors
@using LibrarySystemAdrienne.Web.Controllers
@using LibrarySystemAdrienne.Web.Startup

@model AuthorListViewModel

@section scripts{

    <environment names="Development">
        <script src="~/view-resources/Views/Authors/Index.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">

    <div class="container-fluid">

        <div class="row">

            <div class="col-sm-6">
                <h1>@L("Author")</h1>
            </div>

            <div class="col-sm-6">
            </div>

        </div>

    </div>

</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">

                        <a class="btn bg-blue float-sm-right" asp-controller="Authors" asp-action="CreateOrEditAuthor">
                            <i class="fa fa-plus-square"></i>
                            @L("AddAuthor")
                        </a>

                        <div class="col-sm-6">
                        </div>

                        <div class="row">

                            <div class="col-md-6">

                                <form asp-controller="Authors" asp-action="Index" method="get">

                                    <div class="input-group">

                                        <input type="text" name="searchAuthor" class="form-control txt-search" />

                                        <div class="input-group-prepend">
                                            <button type="submit" name="searchAuthor" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span> @L("Search")
                                            </button>
                                        </div>

                                    </div>

                                </form>

                            </div>

                        </div>

                    </div>

                    <div class="card-body">

                        <div class="table-responsive">
                            <table id="AuthorsTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>@L("AuthorsId")</th>
                                        <th>@L("AuthorsName")</th>

                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var author in Model.Authors)
                                    {
                                        <tr>
                                            <td>@author.Id</td>
                                            <td>@author.AuthorName</td>
                                            <td>

                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-secondary edit-author" data-author-id="@author.Id">
                                                    <i class="fas fa-pencil-alt"></i> @L("EditAuthor")
                                                </button>

                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-danger delete-author" data-author-id="@author.Id" data-author-name="@author.AuthorName">
                                                    <i class="fas fa-trash"></i>
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>