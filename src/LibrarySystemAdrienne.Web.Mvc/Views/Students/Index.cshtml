@*
    For Students > Index
*@

@using LibrarySystemAdrienne.Web.Startup
@using LibrarySystemAdrienne.Web.Models.Students
@using LibrarySystemAdrienne.Web.Controllers

@model StudentListViewModel

@{
    ViewBag.Title = L("Students");
    ViewBag.CurrentPageName = PageNames.Students;
}


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>

    </environment>
}

<section class="content-header">
    <div class="container-fluid">

        <div class="row">

            <div class="col-sm-6">
                <h1>@("Students")</h1>
            </div>

            <div class="col-sm-6">
            </div>
        </div>

    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">

                        <a class="btn bg-blue float-sm-right" asp-controller="Students" asp-action="CreateOrEditStudent">
                            <i class="fa fa-plus-square"></i>
                            @L("AddStudent")
                        </a>

                        <div class="col-sm-6">
                        </div>

                        <div class="row">
                            <div class="col-md-6">

                                <form asp-controller="Students" asp-action="Index" method="get">
                                    <div class="input-group">

                                        <input type="text" name="searchStudent" class="form-control txt-search" />

                                        <div class="input-group-prepend">

                                            <button type="submit" name="searchStudent" class="btn bg-blue btn-search">
                                                <span class="fas fa-search" aria-hidden="true"></span>@L("Search")
                                            </button>

                                        </div>

                                    </div>
                                </form>

                            </div>

                            <div class="col-md-6">
                            </div>

                        </div>

                    </div>
                    <div class="card-body">

                        <div class="table-responsive">

                            <table id="StudentsTable" class="table table-striped table-bordered">

                                <thead>
                                    <tr>
                                        <th>@L("StudentId")</th>
                                        <th>@L("StudentName")</th>
                                        <th>@L("StudentContactNumber")</th>
                                        <th>@L("StudentEmail")</th>
                                        <th>@L("DepartmentName")</th>

                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.StudentName</td>
                                            <td>@student.StudentContactNumber</td>
                                            <td>@student.StudentEmail</td>
                                            <td>@student.Department?.DepartmentName</td>

                                            <td>
                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-secondary edit-student" data-student-id="@student.Id">
                                                    <i class="fas fa-pencil-alt"></i> @L("Edit")
                                                </button>
                                                <button style="width:60px; height:30px;" type="button" class="btn btn-sm bg-danger delete-student" data-student-id="@student.Id" data-student-name="@student.StudentName">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
